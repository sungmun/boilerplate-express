{
  "compilerOptions": {
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "mapRoot": "./rootBuild",
    "outDir": "./build",
    "typeRoots": ["./node_modules/@types", ".src/types"],
    "removeComments": true,
    "noUnusedLocals": true,
    "strict": true,
    "pretty": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": "src",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "locale": "ko"
  },
  "include": ["src/**/*"]
}
